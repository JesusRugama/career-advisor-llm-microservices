# Dev Environment Configuration Example
# Copy this file to terraform.tfvars and update with your values

# Project Configuration
project_name = "career-advisor"
environment  = "dev"
owner        = "your-name"

# AWS Configuration
aws_region = "us-west-2"  # Choose your preferred region

# EC2 Configuration
instance_type   = "t3.micro"  # Free tier eligible
key_pair_name   = "your-key-pair"  # Create this in AWS EC2 console first

# Network Configuration
vpc_cidr                 = "10.0.0.0/16"
public_subnet_cidrs      = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs     = ["10.0.3.0/24", "10.0.4.0/24"]
database_subnet_cidrs    = ["10.0.5.0/24", "10.0.6.0/24"]

# Security Configuration
allowed_ssh_cidrs     = ["0.0.0.0/0"]  # Restrict to your IP: ["YOUR_IP/32"]
allowed_service_cidrs = ["0.0.0.0/0"]  # Restrict for production

# Database Configuration
database_name     = "career_advisor"
database_username = "postgres"
database_password = "your-secure-password-here"  # Use a strong password

# GitHub Repository (for deployment)
github_repo_url = "https://github.com/yourusername/CareerAdvisor.git"
github_branch   = "main"

# Optional: Custom Domain Configuration
# Uncomment and configure if you have a domain
# domain_name      = "yourdomain.com"
# route53_zone_id  = "Z1234567890ABC"

# Cost Optimization Notes:
# - This configuration targets ~$25-30/month
# - Uses t3.micro instances (free tier eligible for first 12 months)
# - Single AZ deployment to reduce costs
# - Minimal storage allocation
# - No NAT Gateway (services run on public subnet)
# 
# Security Notes:
# - Restrict allowed_ssh_cidrs to your IP for production
# - Use strong database passwords
# - Consider using AWS Secrets Manager for sensitive values
